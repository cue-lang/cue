cue cmd run_list
stdout 'Hello world!'

-- task.cue --
package home
message: "Hello world!"

-- task_tool.cue --
package home

command: run_list: runBase & {
	task: echo: cmd: ["echo", message]
}

-- base_tool.cue --
package home

// deliberately put in another file to test resolving top-level identifiers
// in different files.
runBase: {
	task: echo: {
		kind:   "exec"
		stdout: string
	}

	task: display: {
		kind: "print"
		text: task.echo.stdout
	}
}
