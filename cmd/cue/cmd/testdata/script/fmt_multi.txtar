! exec cue fmt --check .
cmp stdout stdout.golden

! exec cue fmt --check x.cue underscore.cue unnamed.cue y.cue yb.cue
cmp stdout stdout.golden

! exec cue fmt --check --files .
cmp stdout stdout.golden
-- stdout.golden --
underscore.cue
unnamed.cue
x.cue
y.cue
yb.cue
-- x.cue --
// header

package x

// file comment

a:    1
bb:  2

-- underscore.cue --
package _

a:    1
bb:  2

-- unnamed.cue --
a:    1
bb:  2

-- y.cue --
package y

// a comment
a:    1
bb:  2 @test(foo)

-- yb.cue --
// only for prod
@if(prod)

package y

a:    1 @test(foo)
bb:  2
