! exec cue fmt --check .
cmpenv stdout stdout.golden

! exec cue fmt --check x.cue star.cue y.cue yb.cue
cmpenv stdout stdout.golden
-- stdout.golden --
$WORK${/}star.cue
$WORK${/}x.cue
$WORK${/}y.cue
$WORK${/}yb.cue
-- x.cue --
// header

package x

// file comment

a:    1
bb:  2

-- star.cue --
package _

a:    1
bb:  2

-- y.cue --
package y

// a comment
a:    1
bb:  2 @test(foo)

-- yb.cue --
// only for prod
@if(prod)

package y

a:    1 @test(foo)
bb:  2

-- out/x.cue --
// header

package x

// file comment

a:  1
bb: 2
-- out/star-cue --
package _

a:  1
bb: 2
-- out/y-cue --
package y

// a comment
a:  1
bb: 2 @test(foo)
-- out/yb-cue --
// only for prod
@if(prod)

package y

a:  1 @test(foo)
bb: 2
