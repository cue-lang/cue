# Verify that `cue fmt -` always writes valid CUE provided
# in stdin to stdout, even if it is well formatted.

stdin not-formatted
exec cue fmt -
cmp stdout formatted

stdin formatted
exec cue fmt -
cmp stdout formatted

# Verify that `cue fmt -` does not write invalid CUE to stdout.
stdin syntax-error
! exec cue fmt -
! stdout .

-- syntax-error --
a: {
-- not-formatted --
foo : 2
a: {b: 3} // a comment
-- formatted --
foo: 2
a: {b: 3} // a comment
-- fmt/cue.mod/module.cue --
