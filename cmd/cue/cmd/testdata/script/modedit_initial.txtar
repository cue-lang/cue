	version: "v0.9.0-alpha.0"
}
module: "main.org@v0"
-- want-module-3 --
deps: {
	"foo.bar@v0": {
		v: "v0.2.3"
	}
}
language: {
	version: "v0.9.0-alpha.0"
}
module: "main.org@v0"
-- want-stderr --
invalid argument "bad-module!" for "--require" flag: invalid module path@version "bad-module!"
-- want-module-4 --
language: {
	version: "v0.9.0-alpha.0"
}
module: "main.org@v0"
-- want-module-5 --
language: {
