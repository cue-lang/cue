# Check that cue mod tidy does not add a major
# version suffix to the module field unless it is
# already present.

exec cue mod tidy --check
exec cue mod tidy
cmp cue.mod/module.cue want-cue.mod
-- want-cue.mod --
language: {
	version: "v0.8.100"
}
module: "main.org"
-- cue.mod/module.cue --
module: "main.org"
language: version: "v0.8.100"

-- main.cue --
package main
