import (
	"net"
	"strings"
)
issue3993: reduced: {
	x: net.IPv4 | =~"fail"
	x: { if net.IPv4(x) {=~"^10\\." } }
	x: "10.10.10.10"
}

issue3993: full: {
	addr!: string & (net.IPv4 | net.IPv6)
	if net.IPv4(addr) {
		addr: strings.HasPrefix("10.")
	}
	if net.IPv6(addr) {
		addr: strings.HasPrefix("2a02:")
	}
	addr: "10.10.10.10"
}
