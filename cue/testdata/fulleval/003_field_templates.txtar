#name: field templates
#evalFull
-- in.cue --
a: {
	{[name=_]: int}
	k: 1
}
b: {
	{[X=_]: {x: 0, y: *1 | int}}
	v: {}
	w: {y: 0}
}
b: {[y=_]: {}} // TODO: allow different name
c: {
	{[Name=_]: {name: Name, y: 1}}
	foo: {}
	bar: _
}
-- out/compile --
--- in.cue
{
  a: {
    {
      [_]: int
    }
    k: 1
