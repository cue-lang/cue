[
	{
		"description": "root pointer ref",
		"schema": {
			"properties": {
				"foo": {
					"$ref": "#"
				}
			},
			"additionalProperties": false
		},
		"tests": [
			{
				"description": "match",
				"data": {
					"foo": false
				},
				"valid": true
			},
			{
				"description": "recursive match",
				"data": {
					"foo": {
						"foo": false
					}
				},
				"valid": true
			},
			{
				"description": "mismatch",
				"data": {
					"bar": false
				},
				"valid": false,
				"skip": {
					"v3": "unexpected success"
				}
			},
			{
				"description": "recursive mismatch",
				"data": {
					"foo": {
						"bar": false
					}
				},
				"valid": false,
				"skip": {
					"v3": "unexpected success"
				}
			}
		]
	},
	{
