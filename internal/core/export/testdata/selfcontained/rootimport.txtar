Import a package at its root and ensure it comes up with a proper identifier.

#inlineImports: true
-- cue.mod/module.cue --
module: "mod.test/a"
language: version: "v0.9.0"

-- in.cue --
import "mod.test/a/pkg"

a: pkg

// Force no inline.
b: pkg.v.a

-- pkg/pkg.cue --
package pkg

v: {
	a: int
	b: a
}

-- out/self/default --
import "mod.test/a/pkg"

a: pkg

// Force no inline.
b: pkg.v.a
-- out/self/expand_imports --
a: PKG

// Force no inline.
b: PKG.v.a

//cue:path: "mod.test/a/pkg"
let PKG = {
	v: {
		a: int
		b: a
	}
}
