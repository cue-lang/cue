-- in.cue --
import "time"

FormatDuration: [...{
	arg: int
	out: time.FormatDuration(arg)
}]

FormatDuration: [
	{arg: 10920000000000},
	{arg: 5000000000},
	{arg: 600000000},
]
-- out/time --
FormatDuration: [{
	arg: 10920000000000
	out: "3h2m0s"
}, {
	arg: 5000000000
	out: "5s"
}, {
	arg: 600000000
	out: "600ms"
}]

